<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/secondaryProgress">
        <shape
            android:innerRadiusRatio="10"
            android:shape="ring"
            android:thicknessRatio="30.0"
            android:useLevel="true">
            <gradient
                android:centerColor="#63b3f4"
                android:endColor="#63b3f4"
                android:startColor="#63b3f4"
                android:type="sweep" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <rotate
            android:fromDegrees="270"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="270">

            <shape
                android:innerRadiusRatio="10"
                android:shape="ring"
                android:thicknessRatio="30.0"
                android:useLevel="true">

                <rotate
                    android:fromDegrees="270"
                    android:pivotX="50%"
                    android:pivotY="50%"
                    android:toDegrees="360" />

                <!--<gradient
                    android:centerColor="#9AFF00E5"
                    android:endColor="#9AFF00E5"
                    android:startColor="#9AFF00E5"
                    android:type="sweep"/>-->
                <gradient
                    android:centerY="0.1"
                    android:endColor="#fdfffb"
                    android:startColor="#fdfffb"
                    android:type="sweep"
                    android:useLevel="false" />

            </shape>
        </rotate>
    </item>
</layer-list>